{
  "name": "preact-multiselect-button-dropdown",
  "version": "1.1.0",
  "main": "dist/cjs/MultiSelect.js",
  "module": "dist/esm/MultiSelect.js",
  "license": "MIT",
  "author": "Mauricio Farinelli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maufarinelli/react-multiselect-dropdown-button.git"
  },
  "homepage": "https://github.com/maufarinelli/react-multiselect-dropdown-button/#readme",
  "dependencies": {
    "styled-components": "^4.1.3"
  },
  "peerDependencies": {
    "preact": "^10.11.0"
  },
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "cypress": "^3.2.0",
    "dotenv": "6.0.0",
    "dotenv-expand": "4.2.0",
    "enzyme": "^3.9.0",
    "enzyme-to-json": "^3.3.5",
    "enzyme-adapter-preact-pure": "^4.0.1",
    "esbuild": "^0.15.8",
    "eslint": "^8.12.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "24.7.0",
    "jest-pnp-resolver": "1.2.1",
    "jest-resolve": "24.7.0",
    "jest-styled-components": "^6.3.1",
    "jest-watch-typeahead": "^0.3.0",
    "preact": "^10.11.0",
    "prettier": "2.6.1"
  },
  "scripts": {
    "start": "npm run build-example && browser-sync start --server --startPath=example/ --files './bundle.js'",
    "build": "rm -fr dist && mkdir -p dist/esm && mkdir -p dist/cjs && esbuild src/lib/MultiSelect/MultiSelect.jsx --bundle --external:preact --outdir=dist/esm/ --format=esm --jsx-factory=h --jsx-fragment=Fragment --jsx-import-source=preact --jsx=automatic && esbuild src/lib/MultiSelect/MultiSelect.jsx --bundle --external:preact --outdir=dist/cjs/ --format=cjs --jsx-factory=h --jsx-fragment=Fragment --jsx-import-source=preact --jsx=automatic && cp src/lib/MultiSelect/MultiSelect.css dist/ && cp src/lib/MultiSelect/MultiSelect.d.ts dist/cjs/ && cp src/lib/MultiSelect/MultiSelect.d.ts dist/esm/",
    "test": "node scripts/test.js",
    "cypress": "cypress open",
    "lint": "eslint --ext js,jsx src/",
    "lint-fix": "eslint --fix --ext js,jsx src/",
    "build-example": "esbuild example/main.jsx --outfile=example/bundle.js --bundle --jsx-factory=h --jsx-fragment=Fragment --jsx-import-source=preact --jsx=automatic"
  },
  "eslintConfig": {
    "extends": [
      "preact",
      "plugin:jsx-a11y/recommended",
      "plugin:import/recommended"
    ],
    "plugins": [
      "jsx-a11y",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ],
      "import/extensions": [
        "error",
        {
          "js": "never",
          "jsx": "never"
        }
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ]
    },
    "settings": {
      "import/extensions": [
        ".js",
        ".jsx"
      ],
      "import/resolver": {
        "alias": {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      },
      "jest": {
        "version": 24
      }
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "resolver": "jest-pnp-resolver",
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node"
    ],
    "watchPlugins": [
      "/Users/mauricio/Documents/personal/react-multiselect-button-dropdown/node_modules/jest-watch-typeahead/filename.js",
      "/Users/mauricio/Documents/personal/react-multiselect-button-dropdown/node_modules/jest-watch-typeahead/testname.js"
    ]
  }
}
